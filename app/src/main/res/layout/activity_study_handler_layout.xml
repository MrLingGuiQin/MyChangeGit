<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_study_handler_handler_thread_start"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="250dp"
        android:text="使用HandlerThread"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_study_handler_timer_start"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200dp"
        android:text="定时器2s Start"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_study_handler_used_new_Thread"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:text="子线程使用Handler "
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_study_handler_start"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:text="Handler发送消息2s Start"
        android:textAllCaps="false"
        android:textStyle="normal" />

    <Button
        android:id="@+id/btn_study_handler_end"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:text="Handler停止发送消息 End"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/txt_study_handler_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="6dp"
        android:text="TextView" />

</RelativeLayout>