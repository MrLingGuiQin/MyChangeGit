<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_do_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="doGet"
        android:text="doGet"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_do_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="doPost"
        android:text="doPost"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_do_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="doDownLoad"
        android:text="doDownLoad"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_do_download_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="doDownLoadImage"
        android:text="doDownLoadImage"
        android:textAllCaps="false" />

    <ImageView
        android:id="@+id/img_imgview"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/img_default" />

    <TextView
        android:id="@+id/txt_download_progress"
        android:layout_width="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="下载进度 ："
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_download_progress2"
        android:layout_width="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="下载进度 ："
        android:layout_height="wrap_content" />
</LinearLayout>