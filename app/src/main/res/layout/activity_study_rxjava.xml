<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_study_rxjava_hello_word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="helloWord"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_study_rxjava_print_string"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="printString"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_study_rxjava_set_drawable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="setDrawable"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_study_rxjava_used_scheduler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="useScheduler"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_study_rxjava_used_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="useMapChangeParams"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_study_rxjava_used_flatMap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="useFlatMapChangeParams"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_study_rxjava_used_timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="useTimer"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_study_rxjava_used_interval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="useInterval"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_study_rxjava_used_simple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="自定义观察者模式"
                android:textAllCaps="false"/>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>