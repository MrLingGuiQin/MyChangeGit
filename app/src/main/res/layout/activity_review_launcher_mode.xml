<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <Button
        android:id="@+id/btn_mode_standard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Standard"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_mode_singleTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SingleTop"
        android:textAllCaps="false"/>


    <Button
        android:id="@+id/btn_mode_singleTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SingleTask"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_mode_singleInstance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SingleInstance"
        android:textAllCaps="false"/>
</LinearLayout>